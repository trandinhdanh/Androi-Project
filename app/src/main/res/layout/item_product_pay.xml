<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#fff"
    android:id="@+id/view_itemPay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">


        <TextView
            android:id="@+id/textView_shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Soccer Shoes Shop" />

        <ImageView
            android:id="@+id/imageView_imgProductMyAtPay"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/textView_shopName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_background" />

        <TextView
            android:id="@+id/textView_nameProductMyAtPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_shopName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageView_imgProductMyAtPay"
            android:text="Ten san pham"
            android:textColor="#323c58" />

        <TextView
            android:id="@+id/textView_sizeProductMyAtPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_nameProductMyAtPay"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageView_imgProductMyAtPay"
            android:text="Size" />

        <TextView
            android:id="@+id/textView_colorProductMyAtPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_sizeProductMyAtPay"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageView_imgProductMyAtPay"
            android:text="Color" />

        <TextView
            android:id="@+id/textView_qualityProductAtMyPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_shopName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:text="x2"
            android:textColor="#ee4d2d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_priceProductAtMyPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_shopName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:text="400000.đ"
            android:textColor="#ee4d2d" />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/imageView_imgProductMyAtPay"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="24dp"
            android:background="#D2D2D2"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/textView_sumPriceProductAtMyPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="800000.đ"
            android:textColor="#ee4d2d" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/textView_sumPriceProductAtMyPay"
            android:text="Thành tiền:" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>