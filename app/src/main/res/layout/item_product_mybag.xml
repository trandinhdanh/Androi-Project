<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="3dp">
    <!---->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <CheckBox
            android:id="@+id/checkBoxProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="43dp"
            android:buttonTint="#FF0CD7E2"
            android:textColor="#FF0CD7E2" />

        <ImageView
            android:id="@+id/imageView_imgProductAtBag"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="6dp"
            android:layout_toEndOf="@+id/checkBoxProduct"
            android:scaleType="centerCrop"
            android:src="@drawable/img_background" />

        <TextView
            android:id="@+id/textview_nameProductAtBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageView_imgProductAtBag"
            android:text="Tên sản phẩm"
            android:textColor="#323c58"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_TheFirmProductAtBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_nameProductAtBag"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/imageView_imgProductAtBag"
            android:text="Tên hãng"
            android:textColor="#FF0CD7E2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_TitleSizeProductAtBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_TheFirmProductAtBag"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imageView_imgProductAtBag"
            android:text="Size :"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_SizeProductAtBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_TheFirmProductAtBag"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView_TitleSizeProductAtBag"
            android:text="42"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_TitleColorProductAtBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_TheFirmProductAtBag"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView_SizeProductAtBag"
            android:text="Color :"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_ColorProductAtBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_TheFirmProductAtBag"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView_TitleColorProductAtBag"
            android:text="Red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_priceProductAtBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_nameProductAtBag"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/textView_TypePriceProductAtBag"
            android:text="Giá"
            android:textColor="#ee4d2d" />

        <TextView
            android:id="@+id/textView_TypePriceProductAtBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_nameProductAtBag"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="10dp"
            android:text=" .đ"
            android:textColor="#ee4d2d" />

        <!--        <LinearLayout-->
        <!--            android:layout_width="90dp"-->
        <!--            android:layout_height="45dp"-->
        <!--            android:layout_below="@+id/textView_TheFirmProductAtBag"-->
        <!--            android:layout_marginStart="0dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:layout_toEndOf="@+id/imageView_imgProductAtBag"-->
        <!--            android:orientation="horizontal">-->

        <Button
            android:id="@+id/button_truAtBag"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView_ColorProductAtBag"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/imageView_imgProductAtBag"
            android:background="#fff"
            android:text="-"
            android:textColor="#FF0CD7E2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_numberProductAtBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_ColorProductAtBag"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/button_truAtBag"
            android:gravity="center"
            android:padding="6dp"
            android:text="1"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_congAtBag"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView_ColorProductAtBag"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/textView_numberProductAtBag"
            android:background="#fff"
            android:text="+"
            android:textColor="#FF0CD7E2"
            android:textSize="20sp" />

        <!--        </LinearLayout>-->



    </RelativeLayout>

</androidx.cardview.widget.CardView>