<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/viewItemHome">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView_imgProductAtHome"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_background" />

            <TextView
                android:id="@+id/textView_nameProductAtHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView_imgProductAtHome"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:text="Tên sản phẩm"
                android:textColor="#323c58"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/textView_priceProductAtHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_nameProductAtHome"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:padding="6dp"
                android:text="Giá tiền"
                android:textColor="#ee4d2d"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_TypePriceProductAtHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_nameProductAtHome"
                android:layout_marginStart="-4dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/textView_priceProductAtHome"
                android:padding="6dp"
                android:text=".đ"
                android:textColor="#ee4d2d"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_BrandProductAtHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_nameProductAtHome"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="6dp"
                android:padding="6dp"
                android:text="Tên hãng"
                android:textColor="#FF0CD7E2"
                android:textSize="10sp"
                android:textStyle="italic" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_love_yes_no"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:padding="20dp"
                android:src="@drawable/icon_love_off" />


        </RelativeLayout>

    </FrameLayout>


</androidx.cardview.widget.CardView>